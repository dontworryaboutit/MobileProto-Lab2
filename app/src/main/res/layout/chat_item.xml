<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/chat_item_img"
        android:layout_weight="@dimen/chat_item_img_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/chat_item_img_margin_right"
        android:layout_marginEnd="@dimen/chat_item_img_margin_right"
        android:background="@android:color/holo_blue_dark" >
        <ImageView
            android:id="@+id/chat_item_pic"
            android:contentDescription="@string/chat_item_pic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/chat_item_img_padding"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_body"
        android:layout_weight="@dimen/chat_item_body_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/chat_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chat_item_name_top"
            android:text="@string/chat_item_name_default"
            android:textSize="@dimen/chat_item_name" />
        <TextView
            android:id="@+id/chat_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_item_name"
            android:textSize = "@dimen/chat_item_msg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/chat_item_msg_default" />
        <TextView
            android:id="@+id/chat_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chat_item_name"
            android:layout_marginRight="@dimen/chat_item_time_margin_right"
            android:layout_marginEnd="@dimen/chat_item_time_margin_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/chat_item_time"
            android:text="@string/chat_item_time_default" />
    </RelativeLayout>

</LinearLayout>